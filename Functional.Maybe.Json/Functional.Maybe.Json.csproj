<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>7.3</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <RepositoryUrl>https://github.com/AndreyTsvetkov/Functional.Maybe</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>Maybe monad C#</PackageTags>
    <PackageProjectUrl>https://github.com/AndreyTsvetkov/Functional.Maybe</PackageProjectUrl>
    <AssemblyVersion>2.0.0.0</AssemblyVersion>
    <FileVersion>2.0.0.0</FileVersion>
    <Description>Json converter for error-less serialization of Maybe type when using Newtonsoft.Json. Just add MaybeConverter to your list of Json converters.</Description>
    <Version>2.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Functional.Maybe\Functional.Maybe.csproj" />
  </ItemGroup>

</Project>
